@page
@using AccountLedger.Models
@model AccountLedger.Pages.Account.Transaction.CreateModel

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountTransaction.Date" class="control-label"></label>
                <input asp-for="AccountTransaction.Date" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="AccountTransaction.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountTransaction.Type" class="control-label"></label>
                <select asp-for="AccountTransaction.Type" asp-items="Html.GetEnumSelectList<TransactionType>()" class="form-control"></select>
                <span asp-validation-for="AccountTransaction.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountTransaction.Reference" class="control-label"></label>
                <input asp-for="AccountTransaction.Reference" class="form-control" />
                <span asp-validation-for="AccountTransaction.Reference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountTransaction.Amount" class="control-label"></label>
                <input asp-for="AccountTransaction.Amount" class="form-control" />
                <span asp-validation-for="AccountTransaction.Amount" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="AccountTransaction.AccountId" class="control-label"></label>
                <input asp-for="AccountTransaction.AccountId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-id="@Model.AccountId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
