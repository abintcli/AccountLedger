@page
@model AccountLedger.Pages.Account.Transaction.IndexModel

<p>
    <a asp-page="Create" asp-route-id="@Model.AccountId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Amount)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Transactions[0].AccountId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reference)
                </td>

                    @*@Html.DisplayFor(modelItem => item.Amount)*@
                <td> @(item.Type == Models.TransactionType.Debit? "-" : "") @($"{item.Amount:C}")</td>
                @*<td>
            @Html.DisplayFor(modelItem => item.AccountId)
            </td>*@
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        <tr></tr>
        <tr>
            <td colspan="2"></td>
            <td><h3>Total:</h3></td>
            <td><h3>@($"{Model.Total:C}")</h3></td>
        </tr>
    </tbody>
</table>

<div>
    <a asp-page="../Index">Back to List</a>
</div>